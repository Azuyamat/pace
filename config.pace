default "build"

set "output" "bin/pace"

task "build" {
    description "Build the project"
    command "go build -o ${output} cmd/pace/main.go"
    before ["tidy", "test"]
}

hook "tidy" {
    description "Format the code"
    command "gofmt -s -w ."
}

hook "test" {
    description "Run tests"
    command "go test ./..."
}